{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Main + renderer",
            "configurations": [
                "Main",
                "Renderer"
            ],
            "stopAll": true
        }
    ],
    "configurations": [
    {
        "name": "Electron mc",
        "program": "${workspaceFolder}/launcher.js",
        "request": "launch",
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
        "skipFiles": [
            "<node_internals>/**"
        ],
        "type": "node"
    },
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/launchercore.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
            {
                "name": "Renderer",
                "port": 9222,
                "request": "attach",
                "type": "chrome",
                "webRoot": "${workspaceFolder}"
            },
            {
                "name": "Main",
                "type": "node",
                "request": "launch",
                "cwd": "${workspaceFolder}",
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
                "windows": {
                    "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
                },
                "args": [
                    ".",
                    "--remote-debugging-port=9222"
                ],
                "outputCapture": "std",
                "console": "integratedTerminal"
            }
    ]
}